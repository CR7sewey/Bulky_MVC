@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@{
}

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6">
			<h2 class="text-primary text-end">
				<a asp-page="/Categories/Create" class="btn btn-primary"> 
					<i class="bi bi-file-plus col"></i>Add New Category
				</a>
			</h2>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.CategoryList.OrderBy(i => i.DisplayOrder))
			{
				<tr>
					<td>
						@item.CategoryName
					</td>
					<td>
						@item.DisplayOrder
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>
