@using Bulky.Models.Models
@model Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
}


<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Create Product</h2>

			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="border p-3">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				
				<div class="form-floating py-2 col-12">
					<input type="text" class="form-control border-0 shadow" asp-for="Title" />
					<label class="ms-2" asp-for="Title"></label>
					<span asp-validation-for="Title" class="text-danger"></span> <!--- tag helper for showing errors from controller ModelState -->
				</div>

				<div class="form-floating py-2 col-12">
					<textarea class="form-control border-0 shadow" asp-for="Description"></textarea>
					<label class="ms-2" asp-for="Description"></label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="ISBN" />
					<label class="ms-2" asp-for="ISBN"></label>
					<span asp-validation-for="ISBN" class="text-danger"></span>

				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Author" />
					<label class="ms-2" asp-for="Author"></label>
					<span asp-validation-for="Author" class="text-danger"></span>

				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="ListPrice" />
					<label class="ms-2" asp-for="ListPrice"></label>
					<span asp-validation-for="ListPrice" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Price" />
					<label class="ms-2" asp-for="Price"></label>
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Price50" />
					<label class="ms-2" asp-for="Price50"></label>
					<span asp-validation-for="Price50" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Price100" />
					<label class="ms-2" asp-for="Price100"></label>
					<span asp-validation-for="Price100" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<select asp-for="CategoryId" asp-items="@(ViewData["CategoryList"] as IEnumerable<SelectListItem>)" class="form-select border-0 shadow">
						<option disabled selected>-- Select Category --</option>
						<label asp-for="CategoryId" class="ms-2"></label>
						<span asp-validation-for="CategoryId" class="text-danger"></span>
					</select>
				</div>


				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control" style="width:150px">
							Create
						</button>
					</div>

					<div class="col-6 col-md-3">
						<a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control" style="width:150px">
							Back to List
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>




@section Scripts {
	@{
		//await Html.RenderPartialAsync("_ValidationScriptsPartial");
		// client side validation is not working, so we need to include the following script files - ex: required
		<partial name="_ValidationScriptsPartial" />
	}
}
