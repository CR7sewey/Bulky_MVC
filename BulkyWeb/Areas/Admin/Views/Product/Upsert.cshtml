@{
}


<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">
					<span>@(Model.Product.Id==0 ? "Create":"Update")</span> Product
				</h2>

			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<input type="hidden" asp-for="Product.Id" /> <!--- hidden input for the id of the category to be edited - not needed here -->
			<div class="border p-3">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				
				<div class="form-floating py-2 col-12">
					<input type="text" class="form-control border-0 shadow" asp-for="Product.Title" />
					<label class="ms-2" asp-for="Product.Title"></label>
					<span asp-validation-for="Product.Title" class="text-danger"></span> <!--- tag helper for showing errors from controller ModelState -->
				</div>

				<div class="py-2 col-12">
					<label class="ms-2 text-muted" asp-for="Product.Description"></label>

					<textarea class="form-control border-0 shadow" asp-for="Product.Description"></textarea>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Product.ISBN" />
					<label class="ms-2" asp-for="Product.ISBN"></label>
					<span asp-validation-for="Product.ISBN" class="text-danger"></span>

				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Product.Author" />
					<label class="ms-2" asp-for="Product.Author"></label>
					<span asp-validation-for="Product.Author" class="text-danger"></span>

				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Product.ListPrice" />
					<label class="ms-2" asp-for="Product.ListPrice"></label>
					<span asp-validation-for="Product.ListPrice" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Product.Price" />
					<label class="ms-2" asp-for="Product.Price"></label>
					<span asp-validation-for="Product.Price" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Product.Price50" />
					<label class="ms-2" asp-for="Product.Price50"></label>
					<span asp-validation-for="Product.Price50" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Product.Price100" />
					<label class="ms-2" asp-for="Product.Price100"></label>
					<span asp-validation-for="Product.Price100" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input type="file" name="file" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Product.ImageUrl"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
						<option disabled selected>-- Select Category --</option>
						<label asp-for="Product.CategoryId" class="ms-2"></label>
						<span asp-validation-for="Product.CategoryId" class="text-danger"></span>
					</select>
				</div>


				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control" style="width:150px">
							@(Model.Product.Id == 0 ? "Create" : "Update"))
						</button>
					</div>

					<div class="col-6 col-md-3">
						<a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control" style="width:150px">
							Back to List
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>




