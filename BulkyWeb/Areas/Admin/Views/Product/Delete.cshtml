@using Bulky.Models.Models
@model Product

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>

			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input type="hidden" asp-for="Id" /> <!--- hidden input for the id of the category to be edited - not needed here -->
			<div class="border p-3 mt-4">
				<div class="form-floating py-2 col-12">
					<input type="text" class="form-control border-0 shadow" asp-for="Title" />
					<label class="ms-2" asp-for="Title"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<textarea class="form-control border-0 shadow" asp-for="Description" disabled></textarea>
					<label class="ms-2" asp-for="Description"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="ISBN" disabled />
					<label class="ms-2" asp-for="ISBN"></label>

				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Author" disabled />
					<label class="ms-2" asp-for="Author"></label>

				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="ListPrice" disabled />
					<label class="ms-2" asp-for="ListPrice"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Price" disabled />
					<label class="ms-2" asp-for="Price"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Price50" disabled />
					<label class="ms-2" asp-for="Price50"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="Price100" disabled />
					<label class="ms-2" asp-for="Price100"></label>
				</div>


				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control" style="width:150px">
							Delete

						</button>
					</div>

					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control" style="width:150px">
							Back to List
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


