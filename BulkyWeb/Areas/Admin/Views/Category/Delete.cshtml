@model Category

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Category</h2>

			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input type="hidden" asp-for="Id" /> <!--- hidden input for the id of the category to be edited - not needed here -->
			<div class="border p-3 mt-4">
				<div class="form-floating py-2 col-12">
					<input type="text" class="form-control border-0 shadow" asp-for="CategoryName" value="@Model.CategoryName" disabled />
					<label class="ms-2">Category Name</label>
					<span asp-validation-for="CategoryName" class="text-danger"></span> <!--- tag helper for showing errors from controller ModelState -->
				</div>
				<div class="form-floating py-2 col-12">
					<input class="form-control border-0 shadow" asp-for="DisplayOrder" disabled />
					<label class="ms-2">Display Order</label>
					<span asp-validation-for="DisplayOrder" class="text-danger"></span>

				</div>
	
		
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control" style="width:150px">
							Delete

						</button>
					</div>

					<div class="col-6 col-md-3">
						<a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control" style="width:150px">
							Back to List
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


